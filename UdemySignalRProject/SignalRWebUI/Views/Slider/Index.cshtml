@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfada öne çıkan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
							Lütfen sadece <strong>1 TANE</strong> öne çıkan alan verisi oluşturun.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>									
									<th scope="col">Başlık 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>										
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider/" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>